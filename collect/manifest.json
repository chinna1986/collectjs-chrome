{
  "manifest_version": 2,

  "name": "CollectJS",
  "description": "Get's css selector rules for a crawler",
  "version": "0.3",
  "permissions": [
    "activeTab",
    "storage",
    "http://localhost/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "img/icon-38.png"
  }
}